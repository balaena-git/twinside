# Backend environment example for twinside
# Copy to .env and fill real secrets before running in production

# Application
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# Secrets
JWT_SECRET=change_me_to_a_long_secret
SESSION_SECRET=change_me_or_leave_empty_to_use_JWT_SECRET

# Admin credentials (required in production)
ADMIN_EMAIL=admin@example.com
ADMIN_PASS=choose_a_strong_password

# Cookies / proxy
COOKIE_SECURE=false
TRUST_PROXY=false

# CORS - comma-separated origins (e.g. https://app.example.com)
CORS_ORIGIN=

# Session store: 'memory' or 'redis'
SESSION_STORE=memory
REDIS_URL=redis://localhost:6379

# SMTP (optional) - fill for production mail sending
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Other optional config
BCRYPT_ROUNDS=10
